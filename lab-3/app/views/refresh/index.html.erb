<div class="is-flex is-justify-content-center">
  <div class="card" id ="form">
    <div class="is-size-1 card-header is-justify-content-center">Change Term</div>

    <%= form_for(:refresh, url: dashboard_index_path, method: :get) do |f| %>
    
        <div id="container"> 
          <div class="field">
            <%= f.label :semester %><br />
            <%= f.select :semester, [['All \'22 Semesters', ''],['Autumn', '1228'], ['Spring','1222'],['Summer', '1224']] %>
          </div>
        
          <div class="links">
            <div class="actions is-text-align-center">
              <%= f.submit "Refresh", class: 'button'%>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
