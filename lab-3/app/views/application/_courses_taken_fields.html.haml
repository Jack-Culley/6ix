.nested-fields 
  .field 
    = f.label :letter_grade
    %br
    = f.text_field :letter_grade, class: 'input'
  .field 
    = f.label :department
    %br
    = f.text_field :department, class: 'input'
  .field 
    = f.label :is_requested, 'Preferred class to grade?'
    %br
    = f.check_box :is_requested
  .field 
    = f.label :course_number
    %br
    = f.text_field :course_number, class: 'input'
  = link_to_remove_association 'remove course', f, class: 'button'
