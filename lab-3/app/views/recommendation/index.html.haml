.is-flex.is-justify-content-center
  .is-size-1.card-header.is-justify-content-center Student Recommendation

%table#parent-table.table.is-fullwidth.is-hoverable
  %thead
    %tr
      %th Student
      %th Email
      %th Recommendation Status

  %tbody
    = @students.all.each do |s|
      = form_for @user, url: recommendation_index_path, method: :post do |f|
        %tr
          %td{:class => {"toggle #{s.id}"}, :data-bs-toggle => {"collapse"}, :data-bs-target => {s.id}}&#8594;
          %td= s.first_name
          %td= s.email
          %td= s.is_recommended
          %tr{:class => {"collapse"}, :id => {s.id}}
            %td
              %table.table#child-table
                %thead
                  %tr
                    %th Eligible Courses
                    %th Recommend
                    %th
                    %th
        <td>
          <table class="table" id="child-table">
            <thead>
              <tr>
                <th>Section Number</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Days of the Week</th>
                <th>Number of graders</th>
              </tr>

          %td= f.text_field :
        %div.actions.is-text-align-center= f.submit "Submit Recommendations", class: "button"
= render partial: 'bulma_nav', locals: {pagy: @pagy}
