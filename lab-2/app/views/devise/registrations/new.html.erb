<div class="is-flex is-justify-content-center">
  <div class="card" id="form">
  <div class="is-size-1 card-header is-justify-content-center">Sign up</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% unless resource.errors.messages.empty? %>
      <section class="notice hero is-danger is-small">
        <%= render "devise/shared/error_messages", resource: resource %>
      </section>
    <% end %>

    <div id="container"> 
      <div class="field">
        <%= f.label :first_name, 'First Name' %><br />
        <%= f.text_field :first_name, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :last_name, 'Last Name' %><br />
        <%= f.text_field :last_name, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email (must be name.#@osu.edu)' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", :pattern => '^([a-zA-Z0-9_\-\.]+)\.\d@osu\.edu' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
          <%= f.label :user_type %><br />
          <%= f.select :user_type, resource.class::USER_TYPES %>
      </div>

      <div class="links">
        <div class="actions is-text-align-center">
          <%= f.submit "Sign up", class: "button" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <div>
  <% end %>
  </div>
</div>
  </div>
</div>


